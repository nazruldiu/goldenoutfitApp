@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var carouselEl = document.getElementById('carouselExampleDark');
            if (!carouselEl) return;

            // ensure no stale flags
            carouselEl.querySelectorAll('.carousel-item').forEach(it => it.classList.remove('start-anim'));

            // trigger first slide after a tiny delay (so CSS transitions can fire)
            setTimeout(() => {
                var first = carouselEl.querySelector('.carousel-item.active');
                if (first) first.classList.add('start-anim');
            }, 150);

            // reset before sliding
            carouselEl.addEventListener('slide.bs.carousel', function () {
                carouselEl.querySelectorAll('.carousel-item').forEach(it => it.classList.remove('start-anim'));
            });

            // trigger on the new active slide
            carouselEl.addEventListener('slid.bs.carousel', function () {
                var active = carouselEl.querySelector('.carousel-item.active');
                // small timeout helps reliably restart transitions
                setTimeout(() => { if (active) active.classList.add('start-anim'); }, 50);
            });
        });
    </script>

